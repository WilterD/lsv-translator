FROM python:3.10-slim
WORKDIR /app
COPY backend /app
RUN apt-get update && apt-get install -y portaudio19-dev ffmpeg && \
    pip install --no-cache-dir -r requirements.txt
CMD ["python", "app.py"]

# Dockerfile.frontend
FROM node:18
WORKDIR /app
COPY frontend /app
RUN npm install && npm run build
CMD ["npm", "run", "dev"]